  });
});

function showSelectedValue(selectElement) {
  var selectedOption = selectElement.options[selectElement.selectedIndex].text;
  var checkboxes = document.querySelectorAll('input[name="selectedRows[]"]:checked');

  if (selectElement.id === 'cra_codeProjet' || selectElement.id === 'codeProjet') {
    checkboxes.forEach(function (checkbox) {
      var codeProjetElement = checkbox.closest('tr').querySelector("#cra_codeProjet input[type='text']");
      codeProjetElement.value = selectedOption;
    });
  } else if (selectElement.id === 'cra_month') {
    
    var tableBody = document.getElementById("tableBody");
    tableBody.innerHTML = '';
    var monthIndex = {
      'janvier': '01',
      'février': '02',
      'mars': '03',
      'avril': '04',
      'mai': '05',
      'juin': '06',
      'juillet': '07',
      'août': '08',
      'septembre': '09',
      'octobre': '10',
      'novembre': '11',
      'décembre': '12'
    };
    var parts = selectedOption.split(' ');
    var month = parseInt(monthIndex[parts[0].toLowerCase()]);
    var year = parseInt(parts[1]);
    var startDate = new Date(year, month - 1, 1); // Note: Months are zero-based in JavaScript
    var endDate = new Date(year, month, 0);
    var daysInMonth = endDate.getDate();
      // Add rows
      for (var i = 0; i < daysInMonth; i++) {
        var day = i + 1;
        var date = new Date(year, month-1, day);
        var dayOfWeek = date.getDay();
        var newRow = document.createElement("tr");

        // Create and append cells to the new row
        newRow.innerHTML =
          '<td>' +
          (dayOfWeek === 0 || dayOfWeek === 6
            ? '<input disabled="disabled" type="checkbox"/>'
            : '<input type="checkbox" id="checkBox" name="selectedRows[]" value="' + date.toISOString().split('T')[0] + '"/>') +
          '</td>' +
          '<td id="cra_codeProjet"><input type="text" value="-" name="cra_codeProjet-list[]" style="background-color: transparent; border: 1px solid transparent; width:90px"/></td>' +
          '<td id="month">' + selectedOption + '</td>' +
          '<td id="days">' + day + '</td>' +
          '<td id="jour_travaillé">' +
          (dayOfWeek === 0 || dayOfWeek === 6
            ? '<div id="day-worked" class="form-group"><input type="hidden" name="values[' + day + ']" value="0"/><p class="text-muted">0</p></div>'
            : '<div id="day-worked" class="form-group">' +
              '<select name="values[' + day + ']" class="form-control">' +
              '<option value="0">0</option>' +
              '<option value="0.5">0.5</option>' +
              '<option value="1">1</option>' +
              '</select>' +
              '</div>') +
          '</td>' +
          '<td id="txtinput">' +
          (dayOfWeek === 0 || dayOfWeek === 6
            ? '<input style="pointer-events: none; background-color: #f2f2f2; border: 1px solid #ccc;" type="text" name="txtinput[]" value=""/>'
            : '<input type="text" name="txtinput[]" value=""/>') +
          '</td>'+
          '<td id="txtinput-work">' +
          (dayOfWeek === 0 || dayOfWeek === 6
            ? '<input style="pointer-events: none; background-color: #f2f2f2; border: 1px solid #ccc;" type="text" name="txtinput-work[]" value=""/>'
            : '<input type="text" name="txtinput-work[]" value=""/>') +
          '</td>';

        tableBody.appendChild(newRow);
      }
    } 
  }


// Add an event listener to the "Fill Values" button
