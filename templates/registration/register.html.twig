<div class="main-block" style="text-align:center" ></head>

		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		{% for message in app.flashes('notice') %}
			<div class="alert alert-success" role="alert">

				{{ message }}
			</div>
		{% endfor %}
    	{% for erreur in app.flashes('error') %}
			<div class="alert alert-danger" role="alert">

				{{ erreur }}
			</div>
		{% endfor %}
		
		<body>






<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form method="post">
        {{ form_start(registrationForm) }}
          <div class="d-flex flex-row align-items-center 
          justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-2 me-9">
            <img src="{{ absolute_url(asset('assets/Images/solway2.png'))}}" width="120%"/></p>
            
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0"></p>
          </div>

          <!-- Email input -->

           <div class="form-outline mb-4">
                     {{form_errors(registrationForm.name)}}

            					{{ form_widget(registrationForm.name, {'attr': {'placeholder': 'Nom'}}) }}
                    

	
          </div>
    

          <div class="form-outline mb-4">
          {{form_errors(registrationForm.email)}}
            					{{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}})}}

          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
                    {{form_errors(registrationForm.plainPassword.first)}}

           		{{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
          </div>


           <!-- Password input -->
          <div class="form-outline mb-3">
           {{form_errors(registrationForm.plainPassword.second)}}

           		{{ form_widget (registrationForm.plainPassword.second, { 'attr': { 'placeholder': 'Confirmer votre motde passe'} }) }}
          </div>

         
						 <div class="d-flex justify-content-between align-items-center">
              <div class="form-check mb-0">
                <input class="form-check-input" type="checkbox" id="agreeTerms" name="agreeTerms">
                <label class="form-check-label" for="agreeTerms">
                  J'accepte les <a href="#" class="text-body" id="conditionsLink">conditions d'utilisation</a>
                </label>
              </div>
            <div class="form-check mb-0">
            
              
            </div>
           {# <a href="#!" class="text-body">Mot de passe oublié?</a>#}
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Créer mon compte</button>
              	{{ form_end(registrationForm) }}
            <p class="small fw-bold mt-2 pt-1 mb-0">Déja un compte?
             <a href="{{ path('app_login') }}"
                class="link-danger">Me connecter</a></p>
      <div class="modal fade" id="conditionsModal" tabindex="-1" aria-labelledby="conditionsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="conditionsModalLabel">Condition d'utilisation</h5>
                </div>
                <div class="modal-body">
                
