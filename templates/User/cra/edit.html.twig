var totalhours = 0.0;
var daysInput = document.querySelector('#jours-travaillé');

function calculateTotal() {
  totalhours = 0.0;

  // Retrieve all select fields
  var selectFields = document.querySelectorAll('select[name^="values"]');

  selectFields.forEach(function(selectField) {
    var selectedValue = parseFloat(selectField.value);
    totalhours += selectedValue;
  });

  daysInput.value = totalhours.toFixed(2);
}

// Add an event listener to the "Fill Values" button
document.getElementById('fill-values').addEventListener('click', function() {
  // Retrieve all select fields for weekdays
  var selectFields = document.querySelectorAll('select[name^="values"]:not([value="0"]):not([value="0.5"])');
  // Set the value of all select fields to 1
  selectFields.forEach(function(selectField) {
    selectField.value = '1';
  });

  // Retrieve all select fields for weekends
  var weekendFields = document.querySelectorAll('select[name^="values"][value="0"], select[name^="values"][value="0.5"]');

  // Set the value of all select fields for weekends to 0
  weekendFields.forEach(function(weekendField) {
    weekendField.value = '0';
  });
  calculateTotal();
});

document.getElementById('clear-values').addEventListener('click', function() {
  // Retrieve all select fields
  var selectFields = document.querySelectorAll('select[name^="values"]');
  selectFields.forEach(function(selectField) {
    selectField.value = '0';
  });
  daysInput.value = '0.00';
});

